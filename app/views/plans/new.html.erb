<%= form_with(model: @plan, local: true, class: 'max-w-lg mx-auto p-4 bg-white shadow-md rounded-lg') do |f| %>
  <div class="mb-4">
    <%= f.label :name, '旅程タイトル', class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.text_field :name, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="mb-4">
    <%= f.label :public, '公開', class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.check_box :public, class: 'form-checkbox h-5 w-5 text-blue-600' %>
  </div>

  <div class="flex items-center justify-between">
    <%= f.submit '作成', class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="mt-4">
  <%= link_to '戻る', plans_path, class: 'btn btn-secondary' %>
</div>