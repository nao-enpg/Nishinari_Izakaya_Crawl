<%= link_to plan_path(plan) do %>
  <div class="m-4 p-4 rounded-lg shadow-md <%= plan.izakayas.first ? 'bg-cover' : 'bg-gray-300' %>" style="background-image: url('<%= plan.izakayas.first ? plan.izakayas.first.image : 'izakaya' %>');">
    <h3 class="text-lg font-semibold text-white bg-slate-950 opacity-70"><%= plan.name %></h3>
  </div>
<% end %>