<div class="max-w-2xl mx-auto mt-10 p-6 bg-white rounded-lg">
  <%= turbo_frame_tag 'profile' do %>
    <%= render partial: 'profiles/profile', locals: { user: @user } %>
  <% end %>
  <turbo-frame id="edit_profile"></turbo-frame>
</div>

<div class="mt-6">
  <h2 class="text-xl font-bold"><%= t('.favorite_izakaya') %></h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <%= render partial: 'favorites/favorites', collection: @user.favorites %>
  </div>
</div>

<div class="mt-6">
  <h2 class="text-xl font-bold"><%= t('.plan_list') %></h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <%= render partial: 'plans/plan', collection: @user.plans %>
  </div>
</div>

<div class="text-center mt-4">
  <%= link_to t('.back'), root_path, class: 'bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded' %>
</div>